<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff6f2"
    android:gravity="center"
    tools:context="iitg.summer15.androiddevelopment.manparvesh.iitgaa.Login">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">




        <!-- This FrameLayout insets its children based on system windows using
             android:fitsSystemWindows. -->


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/editText_reg_username"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#d0910941"
            android:layout_gravity="center_horizontal"
            android:hint="Username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:inputType="numberPassword"
            android:ems="10"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:id="@+id/editText_reg_password"
            android:textColor="#d0910941"
            android:layout_gravity="center_horizontal"
            android:hint="Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="40sp"
            android:id="@+id/editText_reg_email"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#d0910941"
            android:layout_gravity="center_horizontal"
            android:hint="E-mail ID" />



        <Button android:id="@+id/button_register"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffbc5ba"
            android:layout_marginTop="5sp"
            android:text="Register"
            android:textColor="#d0910941"
            android:textAllCaps="false"/>





    </LinearLayout>



</LinearLayout>
